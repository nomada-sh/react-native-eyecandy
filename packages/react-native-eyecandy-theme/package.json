{
  "name": "@nomada-sh/react-native-eyecandy-theme",
  "version": "1.0.1",
  "description": "React Native Eyecandy Theme",
  "license": "MIT",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "scripts": {
    "prepare": "bob build",
    "build": "bob build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "publish": "npm publish --access public",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "local:publish": "yalc publish --push"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-native": "^0.66.15",
    "jest": "^27.4.7",
    "react": "^17.0.2",
    "react-native": "^0.67.1",
    "react-native-builder-bob": "^0.18.2"
  }
}
