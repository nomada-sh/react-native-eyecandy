{
  "name": "@nomada-sh/react-native-eyecandy",
  "version": "1.1.2",
  "description": "React Native Eye Candy",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-eyecandy.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{js,ts,tsx}\"",
    "build": "bob build",
    "prepare": "npm run build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "yalc:publish": "yalc publish --push"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/nomada-sh/react-native-eyecandy",
  "author": "nomada-sh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nomada-sh/react-native-eyecandy/issues"
  },
  "homepage": "https://github.com/nomada-sh/react-native-eyecandy#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "prettier": "^2.5.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-native/no-inline-styles": "off",
      "no-shadow": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn"
      ],
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "all",
          "useTabs": false,
          "arrowParens": "avoid"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "calendar-base": "^1.1.1",
    "color": "^4.1.0",
    "date-fns": "^2.28.0",
    "deepmerge": "^4.2.2",
    "react-native-picker-select": "^8.0.4",
    "react-use": "^17.3.1",
    "rn-swipe-button": "^1.3.6"
  }
}
